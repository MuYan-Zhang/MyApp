WindowManager:
    LoginPage:
    SecondPage:

<LoginPage>:
    name: "login"
    
    GridLayout:
        cols: 1
        
        GridLayout:
            cols: 2
            
            Label:
                text: "Password: "
            
            TextInput:
                id: inputPW
                multiline: False

        Button:
            text: "Submit"
            on_release:
                app.root.current = "second" if inputPW.text == "david3E" else "login"
                root.manager.transition.direction = "left"

<SecondPage>
    name: "second"

    Button:
        text: "Prev"
        on_release:
            app.root.current = "login"
            root.manager.transition.direction = "right"



    
            